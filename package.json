{
  "name": "pbdm.cc",
  "version": "9.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pbdm/pbdm.github.com.git"
  },
  "scripts": {
    "init": "ln -s ../playground playground && ln -s ../posts posts",
    "http": "http-server -c-1 -p 22222 --cors",
    "https": "http-server -c-1 -S -C server.crt -K server.pem --cors",
    "tree": "node tree.js",
    "dev": "vitepress dev posts",
    "build": "vitepress build posts",
    "preview": "vitepress preview posts"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "http-server": "^14.1.1",
    "husky": "^4.2.5",
    "vitepress": "^1.2.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}