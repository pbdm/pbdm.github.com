{
  "root": "./posts",
  "title": "琥珀草",
  "author": "Bo PENG",
  "description": "Personal site of PBDm",
  "language": "en",
  "plugins": [
    "sequence-diagram-lastest",
    "editlink",
    "splitter",
    "-sharing",
    "anchor-navigation-ex",

    "expandable-chapters-small",

    "favicon",

    "page-footer-ex",

    "-lunr",
    "-search",
    "search-pro"


  ],
  "pluginsConfig": {
    "editlink": {
      "base": "https://github.com/pbdm/pbdm.github.com/edit/gitbook/posts",
      "label": "Edit",
      "multilingual": false
    },
    "anchor-navigation-ex": {
      "showLevel": false
    },
    "page-footer-ex": {
      "copyright": "pbdm",
      "update_label": "Last Modified：",
      "update_format": "YYYY-MM-DD HH:mm:ss"
    },
    "favicon": {
      "shortcut": "../img/favicon.png",
      "bookmark": "../img/favicon.png",
      "appleTouch": "../img/touch-icon.png",
      "appleTouchMore": {
        "120x120": "../img/touch-icon.png",
        "180x180": "../img/touch-icon.png"
      }
    }
  },
  "structure": {
    "readme": "INTRO.md"
  }
}
